<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.arduin.tables" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DatabaseViewActivity"
            android:label="@string/title_activity_database_view"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.arduin.tables.MainActivity" />
        </activity>
        <activity
            android:name=".QuerySelectViewActivity"
            android:label="@string/title_activity_qryselect_view"
            android:launchMode="standard"
            android:parentActivityName=".DatabaseViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DatabaseViewActivity" />
        </activity>
        <activity
            android:name=".RecordViewActivity"
            android:label="@string/title_activity_record_view"
            android:parentActivityName=".QuerySelectViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.arduin.tables.QuerySelectViewActivity" />
        </activity>
        <activity
            android:name=".CustomRecordViewActivity"

            android:parentActivityName=".QuerySelectViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.arduin.tables.QuerySelectViewActivity" />
        </activity>
        <activity
            android:name=".RecordAddActivity"
            android:label="@string/title_activity_record_add"
            android:parentActivityName=".QuerySelectViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.arduin.tables.QuerySelectViewActivity" />
        </activity>
        <activity
            android:name=".CreateTableActivity"
            android:label="@string/title_activity_table_edit"
            android:parentActivityName=".DatabaseViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DatabaseViewActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_preference"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
            android:name=".TempPreferenceActivity"
            android:label="@string/title_activity_temp_preference" >
        </activity>
    </application>

</manifest>
